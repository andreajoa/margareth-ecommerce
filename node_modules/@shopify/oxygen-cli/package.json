{
  "name": "@shopify/oxygen-cli",
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "license": "MIT",
  "version": "4.4.9",
  "type": "module",
  "scripts": {
    "build": "tsup --sourcemap --clean --config ./tsup.config.ts && oclif manifest",
    "changesets:check": "changeset status",
    "dev": "tsup --watch --config ./tsup.config.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts --max-warnings 0 src",
    "lint:format": "prettier --write \"**/*.*\" && npm run lint --fix",
    "generate:manifest": "oclif manifest",
    "prepublishOnly": "npm install && npm run build && rm -rf dist/**/*.test.* && npm run upload-sourcemaps",
    "release": "npm run prepublishOnly && npx changeset publish && git push --follow-tags",
    "test": "vitest run",
    "test:watch": "vitest",
    "upload-sourcemaps": "node ./upload-sourcemaps.mjs"
  },
  "bin": {
    "oxygen-cli": "./dist/oxygen-cli.js"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "exports": {
    "./deploy": "./dist/deploy/index.js"
  },
  "files": [
    "dist",
    "/oclif.manifest.json",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@bugsnag/core": "^7.19.0",
    "@bugsnag/js": "^7.22.4",
    "@bugsnag/node": "^7.23.0",
    "async": "^3.2.5"
  },
  "peerDependencies": {
    "@oclif/core": "^3.15.1",
    "@shopify/cli-kit": "^3.58.0"
  },
  "devDependencies": {
    "@bugsnag/source-maps": "^2.3.3",
    "@changesets/cli": "^2.27.5",
    "@shopify/eslint-plugin": "^44.0.0",
    "@shopify/prettier-config": "^1.1.2",
    "@types/async": "^3.2.24",
    "@types/node": "^20.12.13",
    "eslint": "^8.57.0",
    "eslint-plugin-prettier": "^5.1.3",
    "node-fetch": "^3.3.2",
    "oclif": "^4",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.12",
    "vitest": "^1.6.0"
  },
  "prettier": "@shopify/prettier-config",
  "oclif": {
    "bin": "oxygen-cli",
    "dirname": "oxygen-cli",
    "commands": "./dist/commands",
    "topics": {
      "oxygen": {
        "description": "Oxygen commands"
      }
    }
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ]
}
