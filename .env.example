# Example environment variables for local development
# Copy this to .env and fill in your actual values
# NEVER commit .env or .env.local files with real credentials!

# Session secret (generate a random string)
SESSION_SECRET=your_session_secret_here

# Shopify API tokens (get these from your Shopify Hydrogen dashboard)
PRIVATE_STOREFRONT_API_TOKEN=your_private_storefront_token_here
PUBLIC_STOREFRONT_API_TOKEN=your_public_storefront_token_here

# Customer Account API
PUBLIC_CUSTOMER_ACCOUNT_API_CLIENT_ID=your_client_id_here
PUBLIC_CUSTOMER_ACCOUNT_API_URL=https://shopify.com/YOUR_SHOP_ID

# Store configuration
PUBLIC_STORE_DOMAIN=your-store.myshopify.com
PUBLIC_STOREFRONT_ID=your_storefront_id_here
SHOP_ID=your_shop_id_here
